<!DOCTYPE html>
<head>
  <meta charset="UTF-8">
  <title>tasks list</title>

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >
  <link rel="stylesheet" href="/style.css">

  <style>
  </style>
</head>
<body>

  
  <div class="todo-box">
    <h2 class="mb-4 text-center fw-bold">tasks list</h2>
    <form id="taskForm" class="input-group mb-4">
      <input type="text" id="taskInput" class="form-control" name="task" placeholder="add new task" 
      onfocus="this.placeholder=''" onblur="this.placeholder='add new task'" required>
      <div class="d-grid gap-2 col-2.5 mx-auto">
      <button class="btn btn-primary center">add task</button>
      </div>
    </form>


   <div class="task-list-container">
  <ul class="list-group">
    <% tasks.forEach((task, i) => { %>
      <li class="list-group-item d-flex justify-content-between align-items-center"  data-id="<%= i %>">
        <div>
          <input type="checkbox"class="form-check-input me-2"data-id="<%= i %>"<%= task.done ? "checked" : "" %>>
          <span><%= task.name %></span>
        </div>
        <div class="d-flex">
        <button class="btn btn-success btn-sm me-2 edit-btn" data-id="<%= i %>">Edit</button>
        <button class="btn btn-danger btn-sm delete-btn" data-id="<%= i %>">Delete</button>
      </div>
      </li>
    <% }) %>
  </ul>
</div>

  </div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


<script src="/script.js"></script>



</body>
</html>
